---
import BaseHead from '~/components/base-head.astro'
import Header from '~/components/header.astro'
import Footer from '~/components/footer.astro'

interface Props {
  site_title: string
}

const { site_title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <BaseHead title={site_title} />
  </head>
  <body class='m-auto flex min-h-screen flex-col scroll-smooth text-base'>
    <!-- HEADER -->
    <Header />
    <main class='flex-grow'>
      <slot />
    </main>
    <Footer />
    <!-- FOOTER -->
  </body>
</html>
