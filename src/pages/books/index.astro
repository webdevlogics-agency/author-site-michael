---
import { Image } from 'astro:assets'
import BaseLayout from '~/layouts/base-layout.astro'
import GridContainer from '~/components/ui/grid-container.astro'

import { SITE_TITLE_BOOKS } from '~/consts'

import {
  book_dorian_gray,
  book_goal_planner,
  book_psychology_money,
  book_two_towers,
} from '~/assets'
---

<BaseLayout site_title={SITE_TITLE_BOOKS}>
