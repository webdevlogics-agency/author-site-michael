---
import BaseLayout from '~/layouts/base-layout.astro'
import { SITE_TITLE_CONTACT } from '~/consts'
---

<BaseLayout site_title={SITE_TITLE_CONTACT}>
  <section id='contact'>
    <div class='container m-auto max-w-3xl space-y-24 p-12'>
      <h1 class='text-center text-3xl'>CONTACT</h1>
      <div class='flex flex-col gap-8'>
        <p>NEWSLETTER SIGNUP</p>
        <p class='text-sm'>Find out about new books and giveaways.</p>
      </div>
      <form action='#' class='space-y-8'>
        <div>
          <label for='email' class='mb-2 block text-sm font-medium'
            >EMAIL ADDRESS</label
          >
          <input
            type='email'
            id='email'
            class='block w-full rounded-full border border-gray-300 bg-gray-50 text-sm font-medium'
            required
          />
        </div>
        <div>
          <label for='first-name' class='mb-2 block text-sm font-medium'
            >FIRST NAME</label
          >
          <input
            type='text'
            id='first-name'
            class='block w-full rounded-full border border-gray-300 bg-gray-50 text-sm font-medium'
            required
          />
        </div>

        <button
          class='rounded-full bg-p300 px-4 py-2 font-bold text-white hover:bg-p500'
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
</BaseLayout>
